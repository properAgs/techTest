{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "max-classes-per-file": [
      true,
      1
    ],
    "no-unused-variable": false,
    "object-literal-sort-keys": false,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "lowercase-last"
      }
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "typedef": [
      true,
      "call-signature",
      "parameter"
    ]
  }
}